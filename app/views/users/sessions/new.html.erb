<div class="login">
<br>
  <h2>看護師様ログイン</h2>
<br>
<br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
    </div>
<br>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワード" %>
    </div>
<br>
    <div class="actions">
      <p><%= f.submit 'ログインする', class: "btn-square-pop" %></p>
      <p><%= link_to 'ゲストユーザーでログインする', rumors_guest_sign_in_path, method: :post, class: "btn-square-pop" %></p>
    </div>
  <% end %>
</div>