<div class= "users">
<h1>看護師一覧</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :name, "フリーワード検索" %>
  <%= f.search_field :name_or_area_or_introduction_cont %>
  <%= f.label :年齢 %>
  <%= f.number_field :age_gteq %>〜
  <%= f.number_field :age_lt %>歳以下
  <%= f.submit "検索" %>
<% end %>
<table> 
  <tr>
    <th>名前</th>
    <th><%= sort_link(@q, :area, "住所") %></th>
    <th><%= sort_link(@q, :age, "年齢") %></th>
    <th>自己PR</th>
    <th colspan="3"></th>
  </tr>
<% @users.each do |user| %>
    <tr>
      <td id="name">
      <% if user.image? %>
      <%= image_tag (user.image.url),width:"50px",height:"50px" %>
      <% else %>
      <%= image_tag "default.png",width:"50px" %>
      <% end %>
      <%= user.name %>
      </td>
      <td><%= user.area %></td>
      <td><%= user.age %></td>
      <td><%= user.introduction.truncate(20) %></td>
      <td><%= link_to '詳細', user_path(user.id), class: "btn-square-pop" %></td>
    </tr>
      <% end %>
</table>
</div>
<%= paginate @users %>
