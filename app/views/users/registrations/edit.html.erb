<div class="profile">
<h2><%= t('.プロフィール編集', resource: resource.model_name.human) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :アカウント名 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :年齢 %><br />
    <%= f.number_field :age %>歳
  </div>

  <div class="field">
    <%= f.label :"希望エリア" %><br />
    <%= f.text_field :area %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :自己ＰＲ %><br />
    <%= f.text_area :introduction, autocomplete: "introduction" %>
  </div>

  <div class="field">
    <%= f.label :アカウント画像 %><br />
    <%= f.file_field :image, autocomplete: "image" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label :新しいパスワード %> <i>(<%= t('.変更しない場合は空欄') %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
      <br />

  <div class="field">
    <%= f.label :新しいパスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit '登録', class: "btn-square-pop" %> <%= link_to t('devise.shared.links.back'), :back, class: "btn-square-pop" %>
  </div>
<% end %>

</div>
