<div class="profile">
<%= image_tag (@user.image.url),width:"300px" if @user.image && @user.image.url %>
<table>
<tr>
<th>ユーザー名</th>
<td><%= @user.name %></td>
</tr>
<tr>
<th>年齢</th>
<td><%= @user.age%></td>
</tr>
<tr>
<th>エリア</th>
<td><%= @user.area %><td>
</tr>
<tr>
<% if @user == current_user %>
<th>メールアドレス</th>
<td><%= @user.email %></td>
<% end %>
</tr>
<tr>
<th>自己PR</th>
<td><%= @user.introduction%></td>
</tr>
<tr>
<% if @user == current_user %>
<th>エントリーした法人</th>
<td>
<% @favorite.each do |f| %>
<p><%= link_to f.job.name, job_path(f.job.id) %>  <%= link_to "削除",favorite_path(id: current_user.favorites.find_by(job_id: @job.ids)),method: :delete %></p>
<% end %>
</td>
</table>
<% if @user == current_user %>
<% end %>
<p>フォローしているユーザー</p>
<% @user.following.each do |f| %>
<p><%= link_to f.name, user_path(f.id) %>
<% if f.following.find_by(id: @user.id).present? %>
<%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: f.id), method: :post %>
<% end %>
<% end %>
<% elsif current_user %>
<%= render 'follow_form', user: @user %>
<% elsif @favorite.presence %> 
<p>面接オファー済み</p>
<% elsif current_corporation %>
<%= link_to '面接オファー', corporations_favorites_path(user_id: @user.id), method: :post, class: 'btn btn-primary' %>
<% end %>
<br>
<br>
<%= link_to '戻る', :back, class: "btn-square-pop" %>
<% if @user == current_user %>
<%= link_to 'プロフィール編集', edit_user_registration_path, class: "btn-square-pop" %>
<% if current_user.admin? %>
<%= link_to '管理画面', admins_path, class: "btn-square-pop" %>
<% end %>
<% end %>
</div>