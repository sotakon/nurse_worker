<h3>ユーザー名</h3>
<%= @user.name %>
<h3>年齢</h3>
<%= @user.age%>
<h3>エリア</h3>
<%= @user.area %>
<h3>メールアドレス</h3>
<%= @user.email %>
<h3>自己紹介</h3>
<%= @user.introduction%>
<h3>アイコン</h3>
<%= image_tag (@user.image.url) if @user.image && @user.image.url %>
<% if @user == current_user %>
<%= link_to 'プロフィール編集', edit_user_registration_path %>
<p>エントリーした法人</p>
<% @favorite.each do |f| %>
<p>【<%= f.job.name %>】</p>
<% end %>
<p>フォロー</p>
<% @user.following.each do |f| %>
<p>【<%= f.name %>】</p>
<% end %>
<% elsif current_user %>
<%= render 'follow_form', user: @user %>
<% elsif @favorite.presence %> 
<p>面接オファー済み</p>
<% elsif current_corporation %>
<%= link_to '面接オファー', corporations_favorites_path(user_id: @user.id), method: :post, class: 'btn btn-primary' %>
<% end %>
<%= link_to '戻る', :back %>