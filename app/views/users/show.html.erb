<div class="login">
<h3>ユーザー名</h3>
<%= @user.name %>
<h3>年齢</h3>
<%= @user.age%>
<h3>エリア</h3>
<%= @user.area %>
<h3>メールアドレス</h3>
<%= @user.email %>
<h3>自己紹介</h3>
<%= @user.introduction%>
<h3>アイコン</h3>
<%= image_tag (@user.image.url),width:"300px" if @user.image && @user.image.url %>
<% if @user == current_user %>
<% if current_user.admin? %>
<%= link_to '管理画面', admins_path %>
<% end %>
<%= link_to 'プロフィール編集', edit_user_registration_path %>
<p>エントリーした法人</p>
<% @favorite.each do |f| %>
<p>【<%= f.job.name %>】</p>
<% end %>
<p>フォローしているユーザー</p>
<% @user.following.each do |f| %>
<p><%= link_to f.name, user_path(f.id) %>
<% if f.following.find_by(id: @user.id).present? %>
<%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: f.id), method: :post %>
<% end %>
<% end %>
<% elsif current_user %>
<%= render 'follow_form', user: @user %>
<% elsif @favorite.presence %> 
<p>面接オファー済み</p>
<% elsif current_corporation %>
<%= link_to '面接オファー', corporations_favorites_path(user_id: @user.id), method: :post, class: 'btn btn-primary' %>
<% end %>
<br>
<br>
<%= link_to '戻る', :back %>
</div>