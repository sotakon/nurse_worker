<h1>クチコミ一覧</h1>
<% if user_signed_in? && current_user %>
<%= link_to 'クチコミ投稿', new_rumor_path %>
<% end %>
<%= search_form_for @q do |f| %>
  <%= f.label :name, "フリーワード検索" %>
  <%= f.search_field :name_or_area_or_content_cont %>
  <%= f.label :働いていた時期 %>
  <%= f.number_field :season_gteq %>〜
  <%= f.number_field :season_lt %>年前まで
  <%= f.submit "検索" %>
<% end %>


<div class="card_container">
<% @rumors.each do |rumor| %>
  <div class="card-deck" style="width:25rem">
    <div class="row text-center">
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-header"><h3 class="card-title"><%= rumor.name %></h3></div>
              <div class="card-body">
                <h5 class="card-title">住所:<%= rumor.area %></h5>
                <h5 class="card-title"><%= rumor.season %>年前</h5>
                <p class="card-title"><%= rumor.content %></p>
              </div>
              <div class="card-footer">
                <a><%= link_to '詳細', rumor_path(rumor.id) %></a>
                <% if rumor.user == current_user || current_user.admin?%>
                <%= link_to "編集", edit_rumor_path(rumor.id) %>
                <%= link_to '削除', rumor_path(rumor.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>