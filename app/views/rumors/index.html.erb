<h1>クチコミ一覧</h1>
<% if user_signed_in? && current_user %>
<%= link_to 'クチコミ投稿', new_rumor_path %>
<% end %>
<%= search_form_for @q do |f| %>
  <%= f.label :name, "フリーワード検索" %>
  <%= f.search_field :name_or_area_or_content_cont %>
  <%= f.label :働いていた時期 %>
  <%= f.number_field :season_gteq %>〜
  <%= f.number_field :season_lt %>年前まで
  <%= f.submit "検索" %>
<% end %>

<div class="card_container">
<% @rumors.each do |rumor| %>
    <div class ="card1">
      <div class="row text-center">
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card h-100">
            <img class="card-img-top" src="http://placehold.it/500x325" alt="">
              <div class="card-body">
                <h3 class="card-title"><%= rumor.name %></h3>
                <h4 class="card-title"><%= rumor.area %></h4>
                <p class="card-text"><%= rumor.content %></p>
                <a><%= link_to '詳細', rumor_path(rumor.id) %></a>
                <% if rumor.user == current_user || current_user.admin?%>
                <%= link_to "編集", edit_rumor_path(rumor.id) %>
                <%= link_to '削除', rumor_path(rumor.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
                <% end %>
              </div>
              <div class="card-footer">
                <a href="#" class="btn btn-primary">Find Out More!</a>
              </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate @rumors %>