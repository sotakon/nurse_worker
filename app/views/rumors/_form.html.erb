<%= form_with(model: @rumor, local: true, url: choose_new_or_edit) do |form| %>
  <% if @rumor.errors.any? %>
    <h2><%= @rumor.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @rumor.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
  <%= form.label :法人名 %>
  <%= form.text_field :name %>
  <%= form.label :エリア %>
  <%= form.text_field :area %>
  <%= form.label :働いていた時期 %>
  <%= form.number_field :season %>年前
  <%= form.label :クチコミ %>
  <%= form.text_area :content, value: "（例）\n労働環境:\n待遇:\nキャリアアップ:\n改善した方が良い点:" %>
  <%= form.submit %>
  <% end %>
  <%= link_to '戻る', :back %>