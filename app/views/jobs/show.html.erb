<h1>求人詳細画面</h1>
<p>法人名: <%= @job.name %></p>
<p>エリア: <%= @job.area %></p>
<p>働いていた時期: <%= @job.people %></p>
<p>求人内容: <%= @job.content %></p>

  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(job_id: @job.id), method: :post, class: 'btn btn-primary' %>
  <% end %>