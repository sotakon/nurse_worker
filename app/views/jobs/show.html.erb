<div class="job-profile">
  <% if @job.corporation.image? %>
    <%= image_tag (@job.corporation.image.url),width:"300px",height:"300px" %>
  <% else %>
    <%= image_tag "default.png",width:"300px",height:"300px" %>
  <% end %>
  <br>
  <br>
  <div class="job-list">
    <table>
      <tr>
        <th>勤務先名</th>
        <td><%= @job.name %></td>
      </tr>
        <th>法人名</th>
        <td><%= @job.corporation.name %></td>
      </tr>

      <tr>
        <th>エリア</th>
        <td><%= @job.area %></td>
      </tr>
      <tr>
        <th>募集人数</th>
        <td><%= @job.people %>名<td>
      </tr>
      <tr>
        <th>求人内容</th>
        <td><%= @job.content %></td>
      </tr>
    </table>
  </div>
  <div class="job-btn">
  <br>
    <% if @favorite.present? && current_user%>
      <p class="btn-square-pop">エントリー済み</p>
    <% elsif current_corporation %>
      <br>
    <% else %>
      <%= link_to 'エントリーする', favorites_path(job_id: @job.id), method: :post, class: "btn-square-pop" %>
    <% end %>
    <% if @job.corporation == current_corporation %>
    <%= link_to '編集', edit_job_path(@job.id), class: "btn-square-pop" %>
    <%= link_to '削除', job_path(@job.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class: "btn-square-pop" %>
    <% end %>
  <%= link_to '戻る', jobs_path, class: "btn-square-pop" %>
</div>