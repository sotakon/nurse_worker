<h1>求人一覧</h1>
<%= link_to '求人投稿', new_job_path, class: "btn-square-pop" %>
<%= search_form_for @q do |f| %>
  <%= f.label :name, "フリーワード検索" %>
  <%= f.search_field :name_or_area_or_content_cont %>
  <%= f.submit "検索" %>
<% end %>
<div class="card_container">
  <% @jobs.each do |job| %>
    <div class="card-deck" style="width:25rem">
      <div class="row text-center">
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card h-100">
          <div class="card-header"><h3 class="card-title"><%= job.name %></h3></div>
          <% if current_corporation.image? %>
          <%= image_tag (current_corporation.image.url),width:"300px", height:"200px" %>
          <% else %>
          <%= image_tag "default.png",width:"300px" %>
          <% end %>
              <div class="card-body">
                
                <h5 class="card-title">住所:<%= job.area %></h5>
                <h5 class="card-title"><%= job.people %>名募集</h5>
                <p class="card-text">求人内容:<%= job.content %></p>
                
              </div>
              <div class="card-footer">
              <a><%= link_to '詳細', job_path(job.id), class: "btn-square-pop" %></a>
              <% if job.corporation == current_corporation || current_user && current_user.admin?%>
              <a><%= link_to '編集', edit_job_path(job.id), class: "btn-square-pop"%></a>
              <a><%= link_to '削除', job_path(job.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class: "btn-square-pop" %></a>
              <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<%= paginate @jobs %>



