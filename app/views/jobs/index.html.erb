<h1>求人一覧</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :name, "フリーワード検索" %>
  <%= f.search_field :name_or_area_or_content_cont %>
  <%= f.submit "検索" %>
<% end %>
<% @jobs.each do |job| %>
  <div class="card-deck" style="width:18rem">
  <div class="card">
  <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect fill="#868e96" width="100%" height="100%"/><text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image cap</text></svg>
  <div class="card-body">
    <h3 class="card-title"><%= job.name %></h3>
    <h4 class="card-title"><%= job.area %></h4>
    <h5 class="card-title"><%= job.people %></h5>
    <p class="card-text"><%= job.content %></p>
    <a><%= link_to '詳細', job_path(job.id) %></a>
    <% if job.corporation == current_corporation || current_user.admin?%>
    <a><%= link_to '編集', edit_job_path(job.id) %></a>
    <a><%= link_to '削除', job_path(job.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></a>
    <% end %>
    </div>
    </div>
    </div>
<% end %>
<%= paginate @jobs %>
