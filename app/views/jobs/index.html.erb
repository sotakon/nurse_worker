<h1>求人一覧</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :name, "フリーワード検索" %>
  <%= f.search_field :name_or_area_or_content_cont %>
  <%= f.submit "検索" %>
<% end %>
<table> 
  <tr>
    <th>投稿した法人</th>
    <th>法人名</th>
    <th><%= sort_link(@q, :area, "住所") %></th>
    <th>募集人数</th>
    <th>求人内容</th>
    <th colspan="3"></th>
  </tr>
<table> 
<% @jobs.each do |job| %>
  <tr>
    <td><%= job.corporation.name %></td>
    <td><%= job.name %></td>
    <td><%= job.area %></td>
    <td><%= job.people %>名</td>
    <td><%= job.content %></td>
    <td><%= link_to '詳細を確認する', job_path(job.id) %></td>
    <td><%= link_to '求人を編集する', edit_job_path(job.id) %></td>
    <td><%= link_to '求人を削除する', job_path(job.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しく求人を投稿する', new_job_path %>
<%= link_to '法人プロフィール', corporation_path(current_corporation.id) %>