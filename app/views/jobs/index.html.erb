<h1>求人一覧</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :name, "フリーワード検索" %>
  <%= f.search_field :name_or_area_or_content_cont %>
  <%= f.submit "検索" %>
<% end %>
<table> 
  <tr>
    <th>投稿した法人</th>
    <th>勤務先名</th>
    <th><%= sort_link(@q, :area, "住所") %></th>
    <th>募集人数</th>
    <th>求人内容</th>
    <th colspan="3"></th>
  </tr>
<table> 
<% @jobs.each do |job| %>
  <tr>
    <td><%= job.corporation.name %></td>
    <td><%= job.name %></td>
    <td><%= job.area %></td>
    <td><%= job.people %>名</td>
    <td><%= job.content %></td>
    <td><%= link_to '詳細', job_path(job.id) %></td>
    <% if job.corporation == current_corporation %>
    <td><%= link_to '編集', edit_job_path(job.id) %></td>
    <td><%= link_to '削除', job_path(job.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

