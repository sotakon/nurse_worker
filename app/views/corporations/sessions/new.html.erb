<h2><%= ('ログイン') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログインを記憶 %>
    </div>
  <% end %>
  <br>
  <div class="actions">
    <%= f.submit ('ログインする') %>
    <%= link_to 'ゲストログイン（法人）', jobs_guest_sign_in_path, method: :post %>
  </div>
  <br>
  <%= link_to t("パスワードを忘れた方"), new_password_path(resource_name) %>
<% end %>
