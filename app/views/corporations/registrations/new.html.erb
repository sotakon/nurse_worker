<div class="login">
<br>
<h2>新規登録</h2>
<br>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"法人名" %>
  </div>
  <br>
  <div class="field">
    <%= f.text_field :area, placeholder:"住所" %>
  </div>
  <br>
  <div class="field">
    <%= f.email_field :email, placeholder:"メールアドレス" %>
  </div>
  <div class="field">
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
  </div>
  <br>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード（確認用）" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit ('新規登録'), class: "btn-square-pop" %>
  </div>
<% end %>
</div>