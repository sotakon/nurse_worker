<div class="comment_menu">
  <ul>
    <% comments.each do |comment| %>
      <% if comment.id.present? %>
        <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
          <p><%= comment.content %></p>
          <p><%= link_to "編集", edit_rumor_comment_path(rumor, comment), remote: true %>
          <%= link_to "削除", rumor_comment_path(comment.rumor_id, comment.id), method: :delete, remote: true,
          data: { confirm: "本当に削除しますか?"} %></p>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>